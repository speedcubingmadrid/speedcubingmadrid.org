<div class="col-md-6 mb-4 featured-post">
  <div class="card flex-md-row box-shadow h-100">
    <div class="card-body d-flex flex-column align-items-start">
      <div class="d-flex flex-row w-100 mb-2">
        <div>
          <h3 class="mb-0 w-100">
            <%= link_to post.title, news_slug_path(post.slug), class: "text-dark" %>
          </h3>
          <div class="mb-1 text-muted"><%= l(post.posted_at, format: :post_datetime) %></div>
        </div>
        <!--<div class="card-img-right ml-auto flex-auto d-none d-md-block">thumbnail</div>-->
      </div>
      <div class="card-text mb-auto mt-1">
        <%= md post.body_teaser %>
      </div>
      <% if post.fullpost? %>
        <%= link_to "Lire la suite...", news_slug_path(post.slug) %>
      <% end %>
      <div class="mt-2 w-100">
        <% post.tags.each do |tag| %>
          <%= render("shared/tag", tag: tag) %>
        <% end %>
        <% if current_user&.can_manage_communication_matters? %>
          <span class="pull-right">
          <%= link_to(fa_icon("pencil"), edit_news_path(post), class: "btn btn-sm btn-primary") %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
